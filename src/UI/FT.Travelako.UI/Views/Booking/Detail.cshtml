@using FT.Travelako.UI.Models.Orders
@model FT.Travelako.UI.Models.Orders.ViewModel.OrderDetails

@{
    // ViewData["Title"] = "Detail";
}

<style>
    .horizontal-timeline .items {
    border-top: 2px solid #ddd;
    }

    .horizontal-timeline .items .items-list {
    position: relative;
    margin-right: 0;
    }

    .horizontal-timeline .items .items-list:before {
    content: "";
    position: absolute;
    height: 8px;
    width: 8px;
    border-radius: 50%;
    background-color: #ddd;
    top: 0;
    margin-top: -5px;
    }

    .horizontal-timeline .items .items-list {
    padding-top: 15px;
}
</style>

<div class="container">
    <section class="h-100 h-custom" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-8 col-xl-6">
                    <div class="card border-top border-bottom border-3" style="border-color: #f37a27 !important;">
                        <div class="card-body p-5">

                            <p class="lead fw-bold mb-5" style="color: #f37a27;">Detail Order</p>

                            <div class="row">
                                <div class="col mb-3">
                                    <p class="fw-bold small text-muted mb-1">Date</p>
                                    <p>@Model.CreateDated</p>
                                </div>
                                <div class="col mb-3">
                                    <p class="fw-bold small text-muted mb-1">Tour Name</p>
                                    <p>@Model.TourName</p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col mb-3">
                                    <p class="fw-bold small text-muted mb-1">Guest Size</p>
                                    <p>@Model.GuestSize</p>
                                </div>
                                <div class="col mb-3">
                                    <p class="fw-bold small text-muted mb-1">Full Name</p>
                                    <p>@Model.FullName</p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col mb-3">
                                    <p class="fw-bold small text-muted mb-1">Phone</p>
                                    <p>@Model.Phone</p>
                                </div>
                                <div class="col mb-3">
                                    <p class="fw-bold small text-muted mb-1">Email</p>
                                    <p>@Model.Email</p>
                                </div>
                            </div>

                            <div class="row my-4">
                                <div class="col-md-6 offset-md-8 col-lg-6 offset-lg-6">
                                    <p class="fw-bold small text-muted mb-1">Total Cost</p>
                                    <p class="lead fw-bold mb-0" style="color: #f37a27;">@Model.TotalPrice $</p>
                                </div>
                            </div>

                            <p class="lead fw-bold mb-4 mt-4" style="color: #f37a27;">Tracking Order</p>

                            <div class="row">
                                <div class="col-lg-12">

                                    <div class="horizontal-timeline">

                                        <ul class="list-inline items d-flex justify-content-between">
                                            @if (Model.Status?.ToLower() == nameof(Status.Draft).ToLower())
                                            {
                                                <li class="list-inline-item items-list">
                                                    <p class="py-1 px-2 rounded text-white" style="background-color: #2284bb;">Draft</p>
                                                </li>
                                                <li class="list-inline-item items-list">
                                                    <p class="py-1 px-2 rounded text-white" style="background-color: #a19e9b;">Payment</p>
                                                </li>
                                                <li class="list-inline-item items-list">
                                                    <p class="py-1 px-2 rounded text-white" style="background-color: #a19e9b;">Cancel</p>
                                                </li>
                                            }
                                            else if (Model.Status?.ToLower() == nameof(Status.Payment).ToLower())
                                            {
                                                <li class="list-inline-item items-list">
                                                    <p class="py-1 px-2 rounded text-white" style="background-color: #a19e9b;">Draft</p>
                                                </li>
                                                <li class="list-inline-item items-list">
                                                    <p class="py-1 px-2 rounded text-white" style="background-color: #29a907;">Payment</p>
                                                </li>
                                                <li class="list-inline-item items-list">
                                                    <p class="py-1 px-2 rounded text-white" style="background-color: #a19e9b;">Cancel</p>
                                                </li>
                                            }
                                            else if (Model.Status?.ToLower() == nameof(Status.Cancel).ToLower())
                                            {
                                                <li class="list-inline-item items-list">
                                                    <p class="py-1 px-2 rounded text-white" style="background-color: #a19e9b;">Draft</p>
                                                </li>
                                                <li class="list-inline-item items-list">
                                                    <p class="py-1 px-2 rounded text-white" style="background-color: #a19e9b;">Payment</p>
                                                </li>
                                                <li class="list-inline-item items-list">
                                                    <p class="py-1 px-2 rounded text-white" style="background-color: #ff4848;">Cancel</p>
                                                </li>
                                            }
                                        </ul>

                                    </div>

                                </div>
                            </div>

                            <p class="mt-4 pt-2 mb-0">Continute Booking <a asp-action="Index" asp-controller="Home" style="color: #f37a27;">Back to Home</a></p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>