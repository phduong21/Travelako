                            <input type="text" class="form-control" id="hotel" name="Hotel" value="@Model.TravelDetail.hotelTitle" readonly>
                        </div>
                        <div class="form-group">
                            <label for="hotelprice">Hotel Price</label>
                            <input type="text" class="form-control" id="hotelprice" name="HotelPrice" value="@Model.TravelDetail.hotelPrice" readonly>
                        </div>
                        <div class="form-group">
                            <label for="website">Traffic</label>
                            <input type="text" class="form-control" id="traffic" name="Traffic" value="@Model.TravelDetail.trafficType" readonly>
                        </div>

                        <div class="form-group">
