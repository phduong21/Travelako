<script type="text/javascript">
    var count = 20; // Timer
    var redirect = "/Home/Index"; // Target URL

    function countDown() {
        var timer = document.getElementById("timer"); // Timer ID
        if (count > 0) {
            count--;
            timer.innerHTML = "This page will redirect in " + count + " seconds."; // Timer Message
            setTimeout("countDown()", 1000);
        } else {
            window.location.href = redirect;
        }
    }
</script>

<div id="master-wrap">
    <div id="logo-box">

        <div class="animated fast fadeInUp">
            <div class="icon"></div>
            <h1>Thank you for coming with us</h1>
        </div>

        <div class="notice animated fadeInUp">
            <p class="lead">Click <a class="btn animation" href="/User/Login">here</a>, to sign in with us again! </p>

        </div>

        <div class="footer animated slow fadeInUp">
            <p id="timer">
                <script type="text/javascript">
                    countDown();
                </script>
            </p>
        </div>

    </div>

</div>