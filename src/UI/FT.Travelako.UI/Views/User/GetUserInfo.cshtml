@model FT.Travelako.UI.Models.Users.UserDetailResponseModel

@{
    ViewBag.Title = "User Information";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
        transition: background-color 0.3s ease;
    }

    .user-container {
        width: 90%;
        max-width: 1200px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: transform 0.3s ease, background-color 0.3s ease;
        overflow: hidden;
    }

        .user-container:hover {
            transform: scale(1.02);
            background-color: #f0f0f0;
        }

    .profile-container {
        overflow: hidden;
        border-radius: 50%;
        margin-right: 30px;
        border: 8px solid #fff;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        transition: border-color 0.3s ease;
    }

    .profile-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        transition: transform 0.3s ease;
    }

    .user-container:hover .profile-image {
        transform: scale(1.05);
    }

    .user-container:hover .profile-container {
        border-color: #3498db;
    }

    .user-details {
        flex-grow: 1;
        text-align: left;
        color: #333;
    }

    h2 {
        color: #3498db;
        margin-bottom: 10px;
        font-size: 2.5em;
        transition: color 0.3s ease;
    }

    .user-container:hover h2 {
        color: #1e6eb4;
    }

    p {
        margin: 12px 0;
        color: #777;
        font-size: 1.5em;
    }

    .edit-button,
    .cancel-button,
    .deactivate-button,
    .delete-button {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1.2em;
        transition: transform 0.2s ease;
        display: inline-block;
        text-align: center;
        text-decoration: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

    .edit-button {
        background-color: #3498db;
        color: #fff;
        transition: background-color 0.3s ease;
    }

    .cancel-button {
        background-color: #e74c3c;
        color: #fff;
        transition: background-color 0.3s ease;
    }

    .deactivate-button {
        background-color: #e74c3c;
        color: #fff;
        transition: background-color 0.3s ease;
    }

    .delete-button {
        background-color: #e74c3c;
        color: #fff;
        transition: background-color 0.3s ease;
    }

        .edit-button:hover,
        .cancel-button:hover,
        .deactivate-button:hover,
        .delete-button:hover {
            transform: scale(1.05);
        }

    .hide {
        display: none;
    }

    .hide-delete .delete-button {
        display: none;
    }
</style>

<div class="user-container">
    <div class="profile-container">
        <img src="@(string.IsNullOrEmpty(Model.Image) ? ViewBag.ImagePath : Model.Image)" alt="User Profile Image" class="profile-image">
    </div>
    <div class="user-details">
        <h2>@Model.UserName</h2>
        <p>First Name: <span id="firstName">@Model.FirstName</span></p>
        <p>Last Name: <span id="lastName">@Model.LastName</span></p>
        <p>Address: <span id="address">@Model.Address</span></p>
        <p>Email: <span id="email">@Model.Email</span></p>
        <p>Role: @Model.Role</p>
        <button class="edit-button" onclick="toggleEdit()">Edit</button>
        <button class="cancel-button hide" onclick="cancelEdit()">Cancel</button>
        <button class="deactivate-button" onclick="deactivateUser()">Deactivate</button>

        <!-- Edit Form -->
        <form id="editForm" class="hide" asp-action="EditUser" method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" id="editFirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" id="editLastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" id="editAddress" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" id="editEmail" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                @Html.LabelFor(model => model.Image)
                <input type="text" asp-for="Image" id="imageUrlInput" placeholder="Enter image URL" />
                <button type="button" onclick="displayImage()">Show Image</button>
            </div>

            <div>
                <img id="previewImage" src="" alt="Preview Image" style="max-width: 100%; max-height: 200px; margin-top: 10px; display: none;" />
            </div>
            <button type="submit" class="btn btn-primary">Update User</button>
        </form>
        <!-- End Edit Form -->
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        function toggleEdit() {
            document.getElementById('editForm').classList.remove('hide');
            document.getElementById('firstName').classList.add('hide');
            document.getElementById('lastName').classList.add('hide');
            document.getElementById('address').classList.add('hide');
            document.getElementById('email').classList.add('hide');
            document.getElementById('editFirstName').value = document.getElementById('firstName').innerText;
            document.getElementById('editLastName').value = document.getElementById('lastName').innerText;
            document.getElementById('editAddress').value = document.getElementById('address').innerText;
            document.getElementById('editEmail').value = document.getElementById('email').innerText;

            // Show image input and set its value
            document.getElementById('editImageUrl').classList.remove('hide');
            document.getElementById('editImageUrl').value = document.getElementById('profileImage').getAttribute('src');

            // Hide the original image field
            document.getElementById('profileImage').classList.add('hide');

            document.querySelector('.edit-button').classList.add('hide');
            document.querySelector('.cancel-button').classList.remove('hide');
        }

        function cancelEdit() {
            document.getElementById('editForm').classList.add('hide');
            document.getElementById('firstName').classList.remove('hide');
            document.getElementById('lastName').classList.remove('hide');
            document.getElementById('address').classList.remove('hide');
            document.getElementById('email').classList.remove('hide');

            // Hide image input
            document.getElementById('editImageUrl').classList.add('hide');

            // Show the original image field
            document.getElementById('profileImage').classList.remove('hide');

            document.querySelector('.edit-button').classList.remove('hide');
            document.querySelector('.cancel-button').classList.add('hide');
        }

        function displayImage() {
            var imageUrl = document.getElementById("imageUrlInput").value;
            var previewImage = document.getElementById("previewImage");

            if (imageUrl) {
                previewImage.src = imageUrl;
                previewImage.style.display = "block";
            } else {
                // Handle empty or invalid URL
                previewImage.src = "";
                previewImage.style.display = "none";
            }
        }

        window.toggleEdit = toggleEdit;
        window.cancelEdit = cancelEdit;
        window.displayImage = displayImage;
    });
</script>

